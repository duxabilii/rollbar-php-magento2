<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="rollbar"
             translate="label"
             class="rollbar-tab"
             sortOrder="10">
            <label>Rollbar</label>
        </tab>
        <section id="rollbar" showInDefault="1" showInStore="1" showInWebsite="1">
            <class>separator-top</class>
            <tab>rollbar</tab>
            <label>Configuration</label>
            <resource>Magento_Backend::system</resource>

            <group id="configuration"
                   translate="label"
                   type="text"
                   sortOrder="10"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Configuration</label>

                <field id="enabled"
                       translate="label comment"
                       type="select"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0">
                    <label>Enable Rollbar</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable or disable Rollbar in your project.</comment>
                </field>

                <field id="access_token"
                       translate="label comment"
                       type="obscure"
                       sortOrder="20"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0">
                    <label>Access Token</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Your project access token.</comment>
                </field>

                <field id="environment"
                       translate="label comment"
                       type="text"
                       sortOrder="30"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0">
                    <label>Environment</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Environment name, e.g. production or development</comment>
                </field>


            </group>
        </section>
    </system>
</config>
